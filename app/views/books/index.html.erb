<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |books| %>
    <tr>
      <td><%= books.title %></td>
      <td><%= books.body %></td>
      <td><%= link_to 'Show', book_path(books) %></td>
      <td><%= link_to 'Edit', edit_book_path(books) %></td>
      <td><%= link_to 'Destroy', book_path(books), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div>
  <%= form_with model: @book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>